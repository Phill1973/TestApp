<%= render 'shared/errors', obj: @user %>

  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@user, :html =>{class: "form-horizontal", role: "form"}) do |form| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :username %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :username, class: "form-control", placeholder: "Eingabe Benutzername", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :email %>
          </div>
          <div class="col-sm-8">
            <%= form.email_field :email, class: "form-control", placeholder: "Eingabe Email", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= form.label :password %>
          </div>
          <div class="col-sm-8">
            <%= form.password_field :password, class: "form-control", placeholder: "Eingabe Passwort", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit(@user.new_record? ? "Registrieren" : "Benutzerdaten updaten", class: 'btn btn-primary btn-lg') %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
