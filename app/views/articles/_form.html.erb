<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <div class ='col-xs-12'>
    <%= form_for(@article, :html =>{class: "form-horizontal", role: "form"}) do |form| %> 
      <div class ="form-group">
        <div class ="control-label col-sm-2">
          <%= form.label "Titel :" %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, class: "form-control", placeholder: "Titel des Artikels", autofocus: true %>
        </div>
      </div>
      <div class ="form-group">
        <div class ="control-label col-sm-2">
          <%= form.label "Beschreibung :" %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area :text, class: "form-control", rows: 6, placeholder: "Artikelbeschreibung", autofocus: true %>
        </div>
      </div>
      <div class ="form-group">
        <div class ="col-sm-offset-2 col-sm-10">
        <%= form.submit "Artikel erstellen", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
