<h1 align="center">Neue Kategorie erstellen</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html =>{class: "form-horizontal", role: "form"}) do |form| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :name %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :name, class: "form-control", placeholder: "Eingabe Kategorie", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Kategorie erstellen", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
